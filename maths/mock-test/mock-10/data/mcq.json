\begin{enumerate}

\item Simplify the expression:
\[
\left(\frac{x^a}{x^b}\right)^{a+b}
\left(\frac{x^b}{x^c}\right)^{b+c}
\left(\frac{x^c}{x^a}\right)^{c+a}
\]

\textbf{Options:}  
\begin{enumerate}
\item $0$
\item $1$
\item $x$
\item $x^{a+b+c}$
\end{enumerate}

\textbf{Solution:}  
\[
= x^{(a-b)(a+b)} \times x^{(b-c)(b+c)} \times x^{(c-a)(c+a)}
\]
\[
= x^{(a^2-b^2)+(b^2-c^2)+(c^2-a^2)} = x^0 = 1
\]

---

\item If
\[
3^{x-1} + 3^{x+1} = 90
\]
find $x$.

\textbf{Options:} $2,\;3,\;4,\;5$

\textbf{Solution:}
\[
3^{x-1}(1+3^2)=90
\Rightarrow 3^{x-1}\cdot 10 = 90
\Rightarrow 3^{x-1}=9=3^2
\]
\[
x-1=2 \Rightarrow x=3
\]

---

\item Find the value of:
\[
256^{0.16} \times 256^{0.09}
\]

\textbf{Options:} $4,\;16,\;64,\;256.25$

\textbf{Solution:}
\[
256^{0.16+0.09} = 256^{0.25} = 256^{1/4} = 4
\]

---

\item Simplify:
\[
\left(\frac{1}{2}\right)^{-2} +
\left(\frac{1}{3}\right)^{-2} +
\left(\frac{1}{4}\right)^{-2}
\]

\textbf{Options:} $\frac{9}{144},\;29,\;\frac{1}{29},\;13$

\textbf{Solution:}
\[
2^2 + 3^2 + 4^2 = 4 + 9 + 16 = 29
\]

---

\item If
\[
2^x = 4^y = 8^z
\quad \text{and} \quad xyz = 288
\]
find $x$.

\textbf{Options:} $4,\;8,\;12,\;16$

\textbf{Solution:}
\[
2^x = 2^{2y} = 2^{3z}
\Rightarrow x = 2y = 3z
\]
\[
x \cdot \frac{x}{2} \cdot \frac{x}{3} = 288
\Rightarrow \frac{x^3}{6} = 288
\Rightarrow x^3 = 1728
\Rightarrow x = 12
\]

---

\item Find $x$ if:
\[
(\sqrt{3})^5 \times 9^2 = 3^x \times 3 \times \sqrt{3}
\]

\textbf{Options:} $2,\;3,\;4,\;5$

\textbf{Solution:}
\[
3^{5/2} \times 3^4 = 3^{x+1+1/2}
\]
\[
6.5 = x + 1.5 \Rightarrow x = 5
\]

---

\item Which of the following is equal to:
\[
\frac{(x^m)^n}{(x^n)^m}
\]

\textbf{Options:}
\[
x^{mn},\; x^0,\; x^{m/n},\; 1
\]

\textbf{Solution:}
\[
\frac{x^{mn}}{x^{mn}} = 1
\]

---

\item Evaluate:
\[
(0.00032)^{3/5}
\]

\textbf{Options:} $0.008,\;0.08,\;0.8,\;0.0008$

\textbf{Solution:}
\[
0.00032 = (0.2)^5
\Rightarrow ((0.2)^5)^{3/5} = (0.2)^3 = 0.008
\]

---

\item If
\[
5^a = 3125
\]
find $5^{a-3}$.

\textbf{Options:} $25,\;125,\;625,\;5$

\textbf{Solution:}
\[
3125 = 5^5 \Rightarrow a=5
\Rightarrow 5^{5-3}=5^2=25
\]

---

\item Find $x$:
\[
2^{x+4} - 2^{x+2} = 3
\]

\textbf{Options:} $-2,\;-1,\;0,\;2$

\textbf{Solution:}
\[
2^{x+2}(2^2 - 1) = 3
\Rightarrow 2^{x+2}\cdot 3 = 3
\Rightarrow 2^{x+2} = 1 = 2^0
\]
\[
x+2=0 \Rightarrow x=-2
\]

\end{enumerate}
